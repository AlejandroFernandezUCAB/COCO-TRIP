@Styles.Render("~/bundles/lugares_viewallCSS")

<a href="@Url.Action("Create", "Lugares")">
  <i class="fa fa-plus-circle icon-add-lugar" aria-hidden="true"></i>
</a>

<div class="row first-row-lugares">

  <!-- Tabla -->

  @foreach (var lugar in Model)
  {

  <div class="col-md-4 col-sm-6 col-xs-12">
    <div class="content-box-lugar card" id="lu-box-one">
      <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Wrapper for slides -->
        @foreach (var fotos in lugar.Foto)
        {
          <div class="carousel-inner" role="listbox">
            <div class="item active">
              <img src="@fotos.Ruta" alt="">
              <div class="carousel-caption"></div>
            </div>



            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        }


          <div class="content-box-info">

            <div class="row">
              <div class="name-lugar-turistico" align="center" id="lu-nombre-one">@lugar.Nombre</div>
            </div>

            <hr>

            <div class="row">
              <div class="col-md-4">
                <div class="subtitle-lugar-turistico">
                  Horario:
                </div>
              </div>
              <div class="col-sm-8">
                @foreach (var horarios in lugar.Horario)
                {
                <div class="text-info-lugar-turistico" id="lu-horario-one">
                  @horarios.HoraApertura.ToString("hh\\:mm") - @horarios.HoraCierre.ToString("hh\\:mm")
                </div>
                }
              </div>
            </div>

            <div class="row">
              <div class="col-md-4">
                <div class="subtitle-lugar-turistico">
                  Costo:
                </div>
              </div>
              <div class="col-sm-8">
                <div class="text-info-lugar-turistico" id="lu-costo-one">
                  @if(@lugar.Costo == 0)
                  {
                    <text>Entrada libre</text>
                  }
                  else
                  {
                    <text>BsF. @lugar.Costo</text>
                  }
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-4">
                <div class="subtitle-lugar-turistico">
                  Descripci&oacute;n:
                </div>
              </div>
            </div>

            <div class="row">
              <div class="text-descripcion-lugar-turistico" id="lu-descripcion-one">
                @lugar.Descripcion
              </div>
            </div>

            <hr>

            <div class="row">
              <ul class="list-inline">
                <li class="list-inline-item">
                  <a href="@Url.Action("Modify", "Lugares")">
                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                  </a>
                </li>
                <li class="list-inline-item">
                  <a href="@Url.Action("LugarDetail", "Lugares")">
                    <i class="fa fa-eye icon-detail" aria-hidden="true"></i>
                  </a>
                </li>
                <li class="list-inline-item">
                  <i id="lu-status-one" class="fa fa-circle active" aria-hidden="true" onclick="cambiarEstado(id);"></i>
                </li>
              </ul>
            </div>

          </div>
        </div>
    </div>
  </div>

  }


</div>
  <!-- Tabla -->
  



@section scripts {
  @Scripts.Render("~/bundles/Lugares_change-statusJS")
}
