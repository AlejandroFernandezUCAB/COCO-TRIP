@Styles.Render("~/bundles/categoriesCSS")
@model IEnumerable < BackOffice_COCO_TRIP.Models.LocalidadEvento>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap.min.css ">



<div class="loader" id="loader"></div>
<div class="fondo-opaco" id="fondo-opaco"></div>
<div class="card">
  <div class="container-fluid pad-top">
    <div class="color-texto"><h4>Localidad de Evntos</h4></div>
    <div>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</div>
    <hr>
    <table width="100%" class="table table-striped table-bordered" id="example" cellspacing="0">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Descripci&oacute;n</th>
          
          <th>Opciones</th>
       
        </tr>
      </thead>
      <tbody>
        @foreach (var item in Model)
        {
          <tr>
          
            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
            <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
            
            
            <td>
              <a class="btn btn-default circle" href="@Url.Action("Delete", "M8_Localidad", new { id = item.Id })" data-toggle="tooltip"
                 data-placement="top" title="Eliminar Localidad">
                <span class="glyphicon glyphicon-align-left" aria-hidden="true"></span>
              </a>
              <button type="button" class="btn btn-default circle ver-categoria" aria-label="Left Align" data-toggle="tooltip" data-placement="top"
                      title="Ver mas" data-name="@item.Nombre" data-description="@item.Descripcion">
                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
              </button>

              <a class="btn btn-default circle" href="@Url.Action("Edit", "M8_Localidad", new { id = item.Id })" data-toggle="tooltip"
                 data-placement="top" title="Editar">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              </a>

            </td>
          
          </tr>
        }
      </tbody>
    </table>
  </div>
</div>
